<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.Id}}" method="POST">
                <button type="submit" class='burgersAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>
      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgersEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>
<h2>Add A Burger Option</h2>
<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Burger">
      <button type="submit" class="addBurgerButton">Add A Burger</button>
    </form>
  </div>
</div>